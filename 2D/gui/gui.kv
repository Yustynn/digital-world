#:kivy 1.9.1

#:import hex kivy.utils.get_color_from_hex
#:import state State.state

<Label>:
    font_name: 'RobotoMono-Regular'

<RootWidget>:
    GridLayout:
        cols: 2
        size: root.size
        state: state

        BoxLayout:
            orientation: 'vertical'
            canvas.before:
                Color:
                    rgb: hex('#282828')
                Rectangle:
                    pos: self.pos
                    size: self.size

            BoxLayout:
                Image:
                    source: './logo.png'
                CurrentData:

            Button:
                text: str(state.temp)

        BoxLayout:
            orientation: 'vertical'
            width: root.width / 5
            canvas.before:
                Color:
                    rgb: hex('#3D3D3D')
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text: 'Change Ideal Temperature'
            Slider:
                id: slider
                orientation: 'vertical'
                range: 25, 35
                step: 0.1
                value: 30.0
            Label:
                text: str(slider.value)
            Label:
                text: 'currently {}'.format(state.ideal_temp)
            Button:
                text: 'SET'
                on_press: state.set('ideal_temp', slider.value)
