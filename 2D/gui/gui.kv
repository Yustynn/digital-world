#:kivy 1.9.1

#:import hex kivy.utils.get_color_from_hex

<Label>:
    font_name: 'RobotoMono-Regular'

<RootWidget>:
    GridLayout:
        cols: 2
        size: root.size

        BoxLayout:
            orientation: 'vertical'

            BoxLayout:
                Image:
                    source: './logo.png'
                CurrentData:

            Button:
                text: 'lol'
        
        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'Change Ideal Temperature'
            Slider:
                id: slider
                orientation: 'vertical'
                range: 25, 35
                step: 0.1
                value: 30.0
            Label:
                text: str(slider.value)
            Button:
                text: 'SET'
