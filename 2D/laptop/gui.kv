#:kivy 1.9.1

#:import hex kivy.utils.get_color_from_hex
#:import state State.state
#:import BLUE constants.BLUE
#:import GREEN constants.GREEN
#:import ORANGE constants.ORANGE

<SimDisplayLabel@Label>:
    font_size: 12

<SimDataDisplay@BoxLayout>:
    height: 60
    orientation: 'vertical'
    size_hint_y: None

    BoxLayout:
        SimDisplayLabel:
            text: 'Sur. Temperature: {}°C'.format(state.sur_temp)
        SimDisplayLabel:
            text: 'Wind Speed: {}m/s'.format(state.wind_vel)
        SimDisplayLabel:
            text: 'Power Consumed (cooling): {:.3f}kW'.format(state.power_consumed/1E3)
    BoxLayout:
        SimDisplayLabel:
            text: 'Solar Irradiance: {}W/m^2'.format(state.solar_irradiance)
        SimDisplayLabel:
            text: 'Location: {}'.format(state.sim_state.location)


<DataDisplayRow@BoxLayout>:
    pos: (100, 100)
    size: 400, 15
    size_hint: None, None
    Label:
        halign: 'left'
        color: root.color
        font_size: sp(12)
        text: root.label
    Label:
        halign: 'left'
        font_size: sp(12)
        text: '{:.2f}{}'.format(root.data, root.unit)

<DataDisplay@GridLayout>:
    rows: 3

    DataDisplayRow:
        color: GREEN
        data: state.target_temp
        label: 'TARGET TEMPERATURE'
        unit: '°C'

    DataDisplayRow:
        color: ORANGE
        data: state.temp
        label: 'CURRENT TEMPERATURE'
        unit: '°C'

    DataDisplayRow:
        color: BLUE
        data: state.power*100
        label: 'POWER (pump + fan)'
        unit: '%'

<PowerGraph, TemperatureGraph>:
    xlabel: 'time'
    padding: 0
    size_hint_x: 0.9
    size_hint_y: 1

<PowerGraph>
    ylabel: 'power'
    ymin: -0.03
    ymax: 1.03

<TemperatureGraph>
    ylabel: 'temperature'
    ymin: 22
    ymax: 37

<Label>:
    font_name: './assets/RobotoMono-Regular'
    halign: 'center'
    valign: 'middle'
    text_size: self.size

<Sidebar@BoxLayout>:
    state: state

    orientation: 'vertical'
    size_hint_x: 0.3

    canvas.before:
        Color:
            rgb: hex('#3D3D3D')
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: 'Change Target Temperature'

        size_hint_y: 0.3

    Slider:
        id: slider
        orientation: 'vertical'
        range: 25, 35
        step: 0.1
        value: 30.0

    Label:
        font_size: sp(24)
        size_hint_y: 0.2
        text: '{}°C'.format(slider.value)
    Label:
        size_hint_y: 0.15
        text: 'currently {}°C'.format(state.target_temp)
    Button:
        background_color: GREEN
        background_normal: ''
        color: 0,0,0,1
        on_press: state.set('target_temp', slider.value)
        text: 'SET'

        size_hint_y: 0.3

<MainContent@BoxLayout>:
    id: main_content
    orientation: 'vertical'
    padding: sp(10)
    spacing: sp(10)

    canvas.before:
        Color:
            rgb: hex('#282828')
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        size_hint: 1, None
        height: 50
        pos: 0,0
        Image:
            source: './assets/logo.png'
            size_hint_y: None
            height: 50
        DataDisplay

    TemperatureGraph
    PowerGraph

<RootWidget>:
    GridLayout:
        cols: 2
        size: root.size

        MainContent
        Sidebar
